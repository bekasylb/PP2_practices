# Task 1: Generator for squares up to N
def square_generator(N):
    for i in range(N + 1):
        yield i ** 2

# Task 2: Generator to print even numbers up to n (comma-separated)
def even_generator(n):
    for i in range(n + 1):
        if i % 2 == 0:
            yield i

# Task 3: Generator for numbers divisible by 3 and 4
def divisible_by_3_and_4(n):
    for i in range(n + 1):
        if i % 3 == 0 and i % 4 == 0:
            yield i

# Task 4: Generator squares from a to b
def squares(a, b):
    for i in range(a, b + 1):
        yield i ** 2

# Task 5: Generator for numbers from n down to 0
def countdown(n):
    for i in range(n, -1, -1):
        yield i

