import math

# Task 1: Convert degree to radian
degree = float(input("Input degree: "))
radian = math.radians(degree)
print("Output radian:", radian)

# Task 2: Area of a trapezoid
height = float(input("Height: "))
base1 = float(input("Base, first value: "))
base2 = float(input("Base, second value: "))
trapezoid_area = 0.5 * (base1 + base2) * height
print("Expected Output:", trapezoid_area)

# Task 3: Area of regular polygon
n_sides = int(input("Input number of sides: "))
side_length = float(input("Input the length of a side: "))
polygon_area = (n_sides * side_length ** 2) / (4 * math.tan(math.pi / n_sides))
print("The area of the polygon is:", polygon_area)

# Task 4: Area of parallelogram
base = float(input("Length of base: "))
height_parallelogram = float(input("Height of parallelogram: "))
parallelogram_area = base * height_parallelogram
print("Expected Output:", parallelogram_area)
